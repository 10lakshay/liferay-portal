{namespace com.liferay.layout.admin.web.FragmentsEditorSidebar}

/**
 * FragmentsEditorSidebar
 */
{template .render}
	{@param panels: list<[
		icon:string,
		label:string,
		panelId:string
	]>}
	{@param spritemap: string}
	{@param? fragmentsEditorSidebarVisible: bool}
	{@param? store: ?}

	{let $sidebarClasses kind="text"}
		fragments-editor-sidebar
		{sp}sidebar

		{if $fragmentsEditorSidebarVisible == false}
			{sp}fragments-editor-sidebar--collapsed
		{/if}
	{/let}

	<div class="{$sidebarClasses}">
		{call com.liferay.layout.admin.web.FragmentsEditorSidebarContent.render}
			{param panels: $panels /}
			{param spritemap: $spritemap /}
			{param store: $store /}
		{/call}
	</div>
{/template}