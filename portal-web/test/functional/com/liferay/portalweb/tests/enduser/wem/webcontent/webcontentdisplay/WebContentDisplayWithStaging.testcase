<definition component-name="portal-wcd">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Web Content Display" />

	<var name="pageName" value="Web Content Display Page" />
	<var name="portletName" value="Web Content Display" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />

		<execute macro="JSONGroup#addGroup">
			<var name="groupName" value="Test Site Name" />
		</execute>
	</set-up>

	<tear-down>
		<var method="PropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="JSONGroup#deleteGroupByName">
					<var name="groupName" value="Test Site Name" />
				</execute>
			</else>
		</if>
	</tear-down>

	<command name="StagingPublishExpiredWebContentViaWCD" priority="4">
		<property name="testray.component.names" value="Staging,Web Content Administration" />

		<execute macro="JSONLayout#addPublicLayout">
			<var name="groupName" value="Test Site Name" />
			<var name="layoutName" value="Staging Test Page" />
		</execute>

		<execute macro="Navigator#gotoSitePage">
			<var name="pageName" value="Staging Test Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Web Content Display" />
		</execute>

		<execute macro="WebContent#addPGViaWCD">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#viewPGViaWCD">
			<var name="webContentContent" value="WC WebContent Content" />
		</execute>

		<execute macro="Staging#openStagingAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="Staging#activateStagingCP">
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="Navigator#gotoStagedSitePage">
			<var name="pageName" value="Staging Test Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="Staging#viewStagingLocalLivePG" />

		<execute macro="WebContent#viewPGViaWCD">
			<var name="webContentContent" value="WC WebContent Content" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name-staging" />
		</execute>

		<execute macro="WebContent#expireSpecificVersionCP">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="Navigator#gotoStagedSitePage">
			<var name="pageName" value="Staging Test Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="Staging#viewStagingLocalLivePG" />

		<execute macro="Staging#gotoPublishToLive" />

		<execute macro="Staging#publishToLive" />

		<execute macro="Navigator#gotoSitePage">
			<var name="pageName" value="Staging Test Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="WebContent#viewPGViaWCD">
			<var name="expiredContent" value="true" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name-staging" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditCP">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#viewCP">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#viewStatus">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentStatus" value="Expired" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>
	</command>
</definition>