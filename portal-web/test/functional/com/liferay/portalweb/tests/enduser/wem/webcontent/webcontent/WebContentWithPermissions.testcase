<definition component-name="portal-wcm">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Web Content Administration" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />

		<execute macro="JSONGroup#addGroup">
			<var name="groupName" value="Test Site Name" />
		</execute>
	</set-up>

	<tear-down>
		<var method="PropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="JSONGroup#deleteGroupByName">
					<var name="groupName" value="Test Site Name" />
				</execute>
			</else>
		</if>
	</tear-down>

	<command name="AddAndViewStructureAndTemplateWithPermissions" priority="5">
		<property name="testray.component.names" value="Permissions,Roles,Training,Web Content Administration" />

		<execute macro="JSONLayout#addPublicLayout">
			<var name="groupName" value="Test Site Name" />
			<var name="layoutName" value="Home" />
		</execute>

		<execute macro="JSONRole#addRegularRole">
			<var name="roleKey" value="Regular Role Name" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="VIEW_SITE_ADMINISTRATION" />
			<var name="resourceName" value="com.liferay.portal.kernel.model.Group" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="ACCESS_IN_CONTROL_PANEL" />
			<var name="resourceName" value="com_liferay_journal_web_portlet_JournalPortlet" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="VIEW" />
			<var name="resourceName" value="com_liferay_journal_web_portlet_JournalPortlet" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="ADD_ARTICLE" />
			<var name="resourceName" value="com.liferay.journal" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="VIEW" />
			<var name="resourceName" value="com.liferay.journal" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="VIEW" />
			<var name="resourceName" value="com.liferay.journal" />
			<var name="roleTitle" value="Site Member" />
			<var name="roleType" value="site" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="ADD_ARTICLE" />
			<var name="resourceName" value="com.liferay.journal" />
			<var name="roleTitle" value="Site Member" />
			<var name="roleType" value="site" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="VIEW_SITE_ADMINISTRATION" />
			<var name="resourceName" value="com.liferay.portal.kernel.model.Group" />
			<var name="roleTitle" value="Site Member" />
			<var name="roleType" value="site" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="VIEW" />
			<var name="resourceName" value="com_liferay_journal_web_portlet_JournalPortlet" />
			<var name="roleTitle" value="Site Member" />
			<var name="roleType" value="site" />
		</execute>

		<execute macro="Permissions#definePermissionViaJSONAPI">
			<var name="resourceAction" value="ACCESS_IN_CONTROL_PANEL" />
			<var name="resourceName" value="com_liferay_journal_web_portlet_JournalPortlet" />
			<var name="roleTitle" value="Site Member" />
			<var name="roleType" value="site" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="NavItem#gotoStructures" />

		<execute macro="WebContentStructures#addCP">
			<var name="structureDescription" value="WC Structure Description" />
			<var name="structureName" value="WC Structure Name" />
		</execute>

		<execute macro="DynamicDataMapping#addField">
			<var name="field" value="Text" />
			<var name="fieldFieldLabel" value="Text" />
			<var name="fieldName" value="Text" />
		</execute>

		<execute macro="WebContentStructures#saveCP">
			<var name="addRoleViewPermissions" value="Regular Role Name" />
			<var name="structureName" value="WC Structure Name" />
		</execute>

		<execute function="SelectFrame" locator1="IFrame#DIALOG" />

		<execute macro="PermissionsInline#addOrRemoveViewPermissionFromAllRoles">
			<var name="addOrRemoveViewPermission" value="Remove" />
			<var name="roleList" value="Guest,Site Member" />
		</execute>

		<execute macro="IFrame#closeFrame" />

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="NavItem#gotoTemplates" />

		<execute macro="WebContentTemplates#addCP">
			<var name="structureName" value="WC Structure Name" />
			<var name="templateDescription" value="WC Template Description" />
			<var name="templateFieldNames" value="Text" />
			<var name="templateName" value="WC Template Name" />
		</execute>

		<execute function="Click" locator1="Icon#ROW_VERTICAL_ELLIPSIS">
			<var name="key_rowEntry" value="WC Template Name" />
		</execute>

		<execute macro="MenuItem#click">
			<var name="menuItem" value="Permissions" />
		</execute>

		<execute function="SelectFrame" locator1="IFrame#DIALOG" />

		<execute macro="PermissionsInline#addOrRemoveViewPermissionFromAllRoles">
			<var name="addOrRemoveViewPermission" value="Add" />
			<var name="roleList" value="Regular Role Name" />
		</execute>

		<execute macro="PermissionsInline#addOrRemoveViewPermissionFromAllRoles">
			<var name="addOrRemoveViewPermission" value="Remove" />
			<var name="roleList" value="Guest,Site Member" />
		</execute>

		<execute function="SelectFrameTop" />

		<execute function="Refresh" />

		<for list="1,2" param="number">
			<execute macro="User#openUsersAdmin" />

			<execute macro="User#addCP">
				<var name="userEmailAddress" value="user${number}@liferay.com" />
				<var name="userFirstName" value="userfn${number}" />
				<var name="userLastName" value="userln${number}" />
				<var name="userScreenName" value="usersn${number}" />
			</execute>

			<execute macro="User#openUsersAdmin" />

			<execute macro="User#editPasswordCP">
				<var name="userEmailAddress" value="user${number}@liferay.com" />
				<var name="userScreenName" value="usersn${number}" />
			</execute>

			<execute macro="Site#openSiteMembershipsAdmin">
				<var name="siteURLKey" value="test-site-name" />
			</execute>

			<execute macro="Site#assignUserAsMemberCP">
				<var name="userFirstName" value="userfn${number}" />
				<var name="userLastName" value="userln${number}" />
				<var name="userScreenName" value="usersn${number}" />
			</execute>
		</for>

		<execute macro="User#openUsersAdmin" />

		<execute macro="User#assignRegularRoleCP">
			<var name="roleTitle" value="Regular Role Name" />
			<var name="userScreenName" value="usersn1" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="user1@liferay.com" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="NavItem#gotoStructures" />

		<execute macro="WebContentStructures#viewCP">
			<var name="structureDescription" value="WC Structure Description" />
			<var name="structureName" value="WC Structure Name" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="Navigator#gotoNavItem">
			<var name="navItem" value="Templates" />
		</execute>

		<execute macro="WebContentTemplates#viewCP">
			<var name="templateDescription" value="WC Template Description" />
			<var name="templateName" value="WC Template Name" />
			<var name="userEditPermission" value="noEditPermission" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="user2@liferay.com" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="NavItem#gotoStructures" />

		<execute function="AssertTextNotPresent" value1="WC Structure Name" />

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="NavItem#gotoTemplates" />

		<execute function="AssertTextNotPresent" value1="WC Template Name" />

		<execute macro="User#logoutAndLoginPG">
			<var name="userLoginEmailAddress" value="test@liferay.com" />
			<var name="userLoginFullName" value="Test Test" />
		</execute>

		<execute macro="Role#openRolesAdmin" />

		<execute macro="Role#definePermissionsCP">
			<var name="permissionDefinitionKeys" value="SITE_ADMIN_CONTENT_WEB_CONTENT_RESOURCE_PERMISSIONS_WEB_CONTENT_FOLDER_ADD_SUBFOLDER_CHECKBOX,SITE_ADMIN_CONTENT_WEB_CONTENT_RESOURCE_PERMISSIONS_WEB_CONTENT_FOLDER_ADD_WEB_CONTENT_CHECKBOX,SITE_ADMIN_CONTENT_WEB_CONTENT_RESOURCE_PERMISSIONS_WEB_CONTENT_FOLDER_VIEW_CHECKBOX,SITE_ADMIN_CONTENT_WEB_CONTENT_RESOURCE_PERMISSIONS_WEB_CONTENT_ARTICLE_UPDATE_CHECKBOX" />
			<var name="roleTitle" value="Regular Role Name" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddWithStructureCP">
			<var name="structureName" value="WC Structure Name" />
		</execute>

		<execute macro="WebContent#addWithStructureCP">
			<var name="structureName" value="WC Structure Name" />
			<var name="webContentText" value="WC WebContent Text" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="WebContent#viewTitle">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#viewWithStructureCP">
			<var name="webContentText" value="WC WebContent Text" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="WebContentFolder#addCP">
			<var name="folderDescription" value="WC Folder Description" />
			<var name="folderName" value="WC Folder Name" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="user1@liferay.com" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditCP">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#editCP">
			<var name="webContentTitle" value="WC WebContent Title" />
			<var name="webContentTitleEdit" value="WC WebContent Title Edit" />
		</execute>

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="WebContentFolder#addSubfolderCP">
			<var name="folderName" value="WC Folder Name" />
			<var name="subfolderDescription" value="WC SubFolder Description" />
			<var name="subfolderName" value="WC SubFolder Name" />
		</execute>
	</command>

	<command name="AddWebContentRemoveGuestViewPermission" priority="4">
		<property name="test.name.skip.portal.instance" value="WebContentWithPermissions#AddWebContentRemoveGuestViewPermission" />
		<property name="testray.component.names" value="Permissions,Web Content Administration" />

		<execute macro="SystemSettings#openSystemSettingsAdmin" />

		<execute macro="SystemSettings#gotoConfiguration">
			<var name="configurationCategory" value="Web Content" />
			<var name="configurationName" value="Web Content" />
			<var name="configurationScope" value="Virtual Instance Scope" />
		</execute>

		<execute macro="FormFields#enableCheckbox">
			<var name="fieldName" value="articleViewPermissionsCheckEnabled" />
		</execute>

		<execute macro="SystemSettings#saveConfiguration" />

		<execute macro="WebContent#openWebContentAdmin">
			<var name="siteURLKey" value="test-site-name" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddCP" />

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="WebContent#viewTitle">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="PermissionsInline#gotoWCArticle">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="Role#removePermissionPG">
			<var name="permissionDefinitionKey" value="CONFIGURATION_PERMISSIONS_VIEW_CHECKBOX" />
			<var name="roleTitle" value="Guest" />
		</execute>

		<execute macro="JSONLayout#addPublicLayout">
			<var name="groupName" value="Test Site Name" />
			<var name="layoutName" value="WCD Page" />
		</execute>

		<execute macro="Navigator#gotoSitePage">
			<var name="pageName" value="WCD Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Web Content Display" />
		</execute>

		<execute macro="WebContentDisplayPortlet#selectWebContent">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="Navigator#gotoSitePage">
			<var name="pageName" value="WCD Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute macro="PermissionsInline#gotoConfigurationPG" />

		<execute function="AssertChecked" locator1="Permissions#CONFIGURATION_PERMISSIONS_VIEW_CHECKBOX">
			<var name="key_roleTitle" value="guest" />
		</execute>

		<execute function="SelectFrame" value1="relative=top" />

		<execute macro="WebContent#viewPGViaWCD">
			<var name="webContentContent" value="WC WebContent Content" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="Navigator#gotoSitePage">
			<var name="pageName" value="WCD Page" />
			<var name="siteName" value="Test Site Name" />
		</execute>

		<execute function="AssertTextNotPresent" value1="Web Content Display" />

		<execute function="AssertTextNotPresent" value1="WC WebContent Content" />
	</command>
</definition>